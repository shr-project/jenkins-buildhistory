    if [ "x$D" != "x" ]; then
        exit 1
    fi

    hostname -s > /etc/opensaf/node_name
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS disable  opensafd.service

	if [ -z "$D" -a "disable" = "enable" ]; then
		systemctl restart  opensafd.service
	fi
fi
if [ x"$D" = "x" ]; then
	if [ -x /sbin/ldconfig ]; then /sbin/ldconfig ; fi
fi
