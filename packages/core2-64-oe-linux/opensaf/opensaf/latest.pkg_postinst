#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS disable  opensafd.service plmcboot.service plmcd.service

	if [ -z "$D" -a "disable" = "enable" ]; then
		systemctl restart  opensafd.service plmcboot.service plmcd.service
	fi
fi
