#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop lircd.service lircmd.service lircd-setup.service lircd-uinput.service
	fi

	systemctl $OPTS disable lircd.service lircmd.service lircd-setup.service lircd-uinput.service
fi
