#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop corosync.service corosync-notifyd.service corosync-qdevice.service corosync-qnetd.service
	fi

	systemctl $OPTS disable corosync.service corosync-notifyd.service corosync-qdevice.service corosync-qnetd.service
fi
