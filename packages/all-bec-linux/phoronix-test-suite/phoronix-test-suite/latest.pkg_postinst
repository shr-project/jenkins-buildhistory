#!/bin/sh\nset -e\nOPTS=""\n\nif [ -n "$D" ]; then\n    OPTS="--root=$D"\nfi\n\nif type systemctl >/dev/null 2>/dev/null; then\n\tif [ -z "$D" ]; then\n\t\tsystemctl daemon-reload\n\tfi\n\n\tsystemctl $OPTS disable phoromatic-client.service phoromatic-server.service\n\n\tif [ -z "$D" -a "disable" = "enable" ]; then\n\t\tsystemctl --no-block restart phoromatic-client.service phoromatic-server.service\n\tfi\nfi\n