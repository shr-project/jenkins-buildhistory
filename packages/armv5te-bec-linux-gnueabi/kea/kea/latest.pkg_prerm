#!/bin/sh
set -e
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop kea-dhcp4.service kea-dhcp6.service kea-dhcp-ddns.service
	fi

	systemctl $OPTS disable kea-dhcp4.service kea-dhcp6.service kea-dhcp-ddns.service
fi
