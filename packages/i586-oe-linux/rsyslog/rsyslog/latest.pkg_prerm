#!/bin/sh\n\tupdate-alternatives --remove  syslogd /usr/sbin/rsyslogd\n\tupdate-alternatives --remove  syslog-conf /etc/rsyslog.conf\n\tupdate-alternatives --remove  syslog-logrotate /etc/logrotate.rsyslog\n\tupdate-alternatives --remove  syslog-service /lib/systemd/system/rsyslog.service\nOPTS=""\n\nif [ -n "$D" ]; then\n    OPTS="--root=$D"\nfi\n\nif type systemctl >/dev/null 2>/dev/null; then\n\tif [ -z "$D" ]; then\n\t\tsystemctl stop rsyslog.service\n\tfi\n\n\tsystemctl $OPTS disable rsyslog.service\nfi\n