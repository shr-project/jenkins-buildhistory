    ln -sf ctapi/libopenctapi.so /usr/lib/libopenctapi.so
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable  openct.service 

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart  openct.service 
	fi
fi
if [ x"$D" = "x" ]; then
	if [ -x /sbin/ldconfig ]; then /sbin/ldconfig ; fi
fi
