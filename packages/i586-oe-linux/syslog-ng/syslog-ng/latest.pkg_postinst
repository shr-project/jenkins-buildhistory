#!/bin/sh
	update-alternatives --install /etc/systemd/system/syslog.service syslog-service /lib/systemd/system/syslog-ng.service 10
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable syslog-ng.service

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart syslog-ng.service
	fi
fi
